        <script>
          document.addEventListener('DOMContentLoaded', () => {
            const track = document.getElementById('slider-track') as HTMLElement;
            const prevBtn = document.getElementById('slider-prev');
            const nextBtn = document.getElementById('slider-next');
            const dots = document.querySelectorAll('#slider-dots button');
            const originalSlides = Array.from(track.children) as HTMLElement[];
            const totalSlides = originalSlides.length;

            function getVisibleSlides() {
              return window.innerWidth >= 768 ? 3 : 1;
            }

            // Clone slides for infinite loop
            function setupInfiniteLoop() {
              // Remove any existing clones
              track.querySelectorAll('[data-clone]').forEach(el => el.remove());

              const visibleSlides = getVisibleSlides();

              // Clone last slides and prepend
              for (let i = totalSlides - 1; i >= totalSlides - visibleSlides; i--) {
                const clone = originalSlides[i].cloneNode(true) as HTMLElement;
                clone.setAttribute('data-clone', 'prepend');
                track.insertBefore(clone, track.firstChild);
              }

              // Clone first slides and append
              for (let i = 0; i < visibleSlides; i++) {
                const clone = originalSlides[i].cloneNode(true) as HTMLElement;
                clone.setAttribute('data-clone', 'append');
                track.appendChild(clone);
              }
            }

            let currentIndex = 0;
            let isTransitioning = false;

            function getSlideWidth() {
              return 100 / getVisibleSlides();
            }

            function updateSlider(animate = true) {
              const visibleSlides = getVisibleSlides();
              const offset = currentIndex + visibleSlides; // Account for prepended clones

              if (!animate) {
                track.style.transition = 'none';
              } else {
                track.style.transition = 'transform 500ms ease-out';
              }

              track.style.transform = `translateX(-${offset * getSlideWidth()}%)`;

              // Update dots
              const maxDots = totalSlides - visibleSlides + 1;
              const activeDot = ((currentIndex % totalSlides) + totalSlides) % totalSlides;
              const dotIndex = Math.min(activeDot, maxDots - 1);

              dots.forEach((dot, index) => {
                if (index < maxDots) {
                  (dot as HTMLElement).style.display = 'block';
                  dot.classList.toggle('bg-gold', index === dotIndex);
                  dot.classList.toggle('bg-gold/30', index !== dotIndex);
                } else {
                  (dot as HTMLElement).style.display = 'none';
                }
              });
            }

            function handleTransitionEnd() {
              const visibleSlides = getVisibleSlides();
              const maxIndex = totalSlides - visibleSlides;

              // If we've gone past the end, jump to the beginning
              if (currentIndex > maxIndex) {
                currentIndex = 0;
                updateSlider(false);
              }
              // If we've gone before the beginning, jump to the end
              else if (currentIndex < 0) {
                currentIndex = maxIndex;
                updateSlider(false);
              }

              isTransitioning = false;
            }

            function nextSlide() {
              if (isTransitioning) return;
              isTransitioning = true;
              currentIndex++;
              updateSlider(true);
            }

            function prevSlide() {
              if (isTransitioning) return;
              isTransitioning = true;
              currentIndex--;
              updateSlider(true);
            }

            track.addEventListener('transitionend', handleTransitionEnd);
            prevBtn?.addEventListener('click', prevSlide);
            nextBtn?.addEventListener('click', nextSlide);

            dots.forEach((dot, index) => {
              dot.addEventListener('click', () => {
                if (isTransitioning) return;
                currentIndex = index;
                updateSlider(true);
              });
            });

            function init() {
              setupInfiniteLoop();
              updateSlider(false);
            }

            window.addEventListener('resize', () => {
              init();
            });

            init();

            // Prevent scroll jump on mobile after slider init
            window.scrollTo(0, 0);
          });
        </script>

