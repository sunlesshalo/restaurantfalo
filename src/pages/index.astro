---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Faló Restaurant | Borsec">
  <!-- Header with language toggle -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-charcoal/95 backdrop-blur-sm border-b border-gold/20">
    <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
      <a href="#" class="text-gold font-serif text-xl tracking-wider">FALÓ</a>

      <!-- Language Toggle -->
      <div class="flex items-center gap-1 text-sm">
        <button
          data-lang-btn="ro"
          onclick="setLang('ro')"
          class="px-3 py-1 rounded transition-colors bg-gold text-charcoal font-medium"
        >
          RO
        </button>
        <button
          data-lang-btn="hu"
          onclick="setLang('hu')"
          class="px-3 py-1 rounded transition-colors text-gold font-medium hover:bg-gold/10"
        >
          HU
        </button>
      </div>
    </div>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center pt-16">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img
          src="/images/hero-food.webp"
          alt="Traditional dishes at Faló Restaurant"
          class="w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-charcoal/80 via-charcoal/60 to-charcoal"></div>
      </div>

      <!-- Hero Content -->
      <div class="relative z-10 text-center px-4 max-w-3xl mx-auto">
        <!-- Logo with glow effect -->
        <div class="mb-8">
          <img
            src="/images/logo.webp"
            alt="Faló Refined"
            class="w-56 h-56 md:w-72 md:h-72 mx-auto logo-glow"
            loading="eager"
          />
        </div>

        <div class="gold-line max-w-sm mx-auto mb-8"></div>

        <p
          class="hero-tagline text-cream text-xl md:text-2xl leading-relaxed mb-10 max-w-xl mx-auto"
          data-ro="Meniu tradițional din regiunea Harghita, într-o atmosferă relaxată perfectă pentru grupuri"
