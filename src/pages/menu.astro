      cursor: pointer;
      font-family: var(--font-family-serif);
      font-size: 1.15rem;
      color: var(--color-gold);
      font-weight: 500;
      -webkit-tap-highlight-color: transparent;
    }
    .accordion-header:active {
      opacity: 0.7;
    }
    .accordion-header.active {
      border-bottom-color: var(--color-gold);
    }
    .accordion-chevron {
      width: 1.25rem;
      height: 1.25rem;
      transition: transform 0.3s ease;
      flex-shrink: 0;
