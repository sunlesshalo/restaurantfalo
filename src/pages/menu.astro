  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tabs = document.querySelectorAll('.menu-tab');
      const sections = document.querySelectorAll('.menu-section');
      const accordionHeaders = document.querySelectorAll('.accordion-header');
      let activeSection: string | null = null;

      function openSection(target: string) {
        sections.forEach(s => s.classList.add('hidden'));
        sections.forEach(s => {
          if ((s as HTMLElement).dataset.section === target) {
            s.classList.remove('hidden');
          }
        });
      }

      function closeAll() {
        sections.forEach(s => s.classList.add('hidden'));
        tabs.forEach(t => {
          t.classList.remove('bg-gold', 'text-charcoal', 'border-gold');
          t.classList.add('text-gold/80', 'border-gold/30');
        });
        accordionHeaders.forEach(h => h.classList.remove('active'));
        activeSection = null;
      }

      // Desktop tabs
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          const target = (tab as HTMLElement).dataset.tab!;
          if (activeSection === target) {
            closeAll();
          } else {
            closeAll();
            activeSection = target;
            tab.classList.add('bg-gold', 'text-charcoal', 'border-gold');
            tab.classList.remove('text-gold/80', 'border-gold/30');
            openSection(target);
          }
          document.getElementById('menu-tabs')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
      });

      // Mobile accordion
      accordionHeaders.forEach(header => {
        header.addEventListener('click', () => {
          const target = (header as HTMLElement).dataset.accordion!;
          if (activeSection === target) {
            closeAll();
          } else {
            closeAll();
            activeSection = target;
            header.classList.add('active');
            openSection(target);
            header.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
    });
  </script>
